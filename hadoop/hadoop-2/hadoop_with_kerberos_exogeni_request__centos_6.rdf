  openssl req -new -batch \
              -config ${TEMP_CA_CONF} \
              -key ${TEMP_CA_KEY} \
              -out ${TEMP_CA_CSR} \
              -passin env:CA_PASS

  # Create the signing CA certificate
  openssl ca -selfsign -batch -notext \
             -config ${TEMP_CA_CONF} \
             -in ${TEMP_CA_CSR} \
             -out ${TEMP_CA_CERT} \
