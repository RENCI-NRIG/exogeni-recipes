    until sudo -u ${user} scp -o BatchMode=yes ${TEMP_TRUSTSTORE} ${server}:${HADOOP_CONF_DIR}/truststore.jks; do sleep 2; done
    until sudo -u ${user} scp -o BatchMode=yes ${TEMP_SERVER_JKS} ${server}:${HADOOP_CONF_DIR}/keystore.jks; do sleep 2; done
  done

  #set ( $sizeWorkerGroup = $workers.size() - 1 )
  #foreach ( $j in [0..$sizeWorkerGroup] )
    server=`echo $workers.get($j).Name() | sed 's/\//-/g'`
    TEMP_SERVER_JKS=${TEMP_CA_DIR}/${server}.server.jks

    until sudo -u ${user} scp -o BatchMode=yes ${TEMP_TRUSTSTORE} ${server}:${HADOOP_CONF_DIR}/truststore.jks; do sleep 2; done
    until sudo -u ${user} scp -o BatchMode=yes ${TEMP_SERVER_JKS} ${server}:${HADOOP_CONF_DIR}/keystore.jks; do sleep 2; done
